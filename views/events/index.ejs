<h2 class="page-header">Search Events</h2>
<form action="/events" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <div class="form-item">
            <label>Venue</label>
            <select name="venue">
                <% venues.forEach(venue => { %>
                    <option label="<%= venue.name %>" value="<%= searchOptions.venue %>"></option>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<div>
    <%- include('../partials/eventGrid', {events: events, large: true}) %> 
</div>
