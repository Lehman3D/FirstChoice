<h2>Search Events</h2>
<form action="/events" method="GET"> 
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <div>
        <label>Venue</label>
        <select name="venue">
            <% venues.forEach(venue => { %>
                <option label="<%= venue.name %>" value="<%= searchOptions.venue %>"></option>
            <% }) %>
        </select>
    </div>
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% events.forEach(event => { %>
        <div>
            <%= event.name %>
            <a href="/events/<%= event.id %>">
                <img height="150" width="100" src="<%= event.imgPath %>">
            </a>
            <%- include('../partials/deleteForm',
                  { url: `/events/${event.id}` }) %>
        </div>
    <% }) %>
</div>
